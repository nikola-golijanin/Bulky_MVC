@model List<Category>

<h1>Category list</h1>
<table class="table table-bordered tabletable-striped">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Display Order</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model.OrderBy(c => c.DisplayOrder))
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.DisplayOrder</td>
            </tr>
        }
    </tbody>
</table>